@model ModelBindingDemo.Models.User
@using ModelBindingDemo.Models

@{
    ViewBag.Title = "ShowUser";
}

<h2>ShowUser</h2>
<h3>The following data would be saved:</h3>
<p>
@Html.LabelFor(m=>m.FirstName): @Model.FirstName
</p>
<p>
@Html.LabelFor(m=>m.LastName): @Model.LastName
</p>
<p>
@Html.LabelFor(m=>m.DateOfBirth): 
@Model.DateOfBirth
</p>
<p>
@Html.LabelFor(m=>m.IsApproved): 
@Model.IsApproved
</p>
<p>
@Html.LabelFor(m=>m.HomeAddress):<br />
@if (Model.HomeAddress != null)
{
@Model.HomeAddress.Street<br />
@Model.HomeAddress.City<br />
@Model.HomeAddress.PostCode<br />
@Model.HomeAddress.Country
}
</p>
<p>
@Html.LabelFor(m=>m.Roles):<br />
@foreach (Role role in Model.Roles)
{
    @role.RoleName<br />
}
</p>